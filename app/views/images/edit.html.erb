<div class="page-header"><h1>Edit Image</h1></div>

<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <label for="tagged_user_id">Tag friends in this photo</label>
  <select name="tagged_user_id">
    <%= @users.each do |user| %>
      <option value="<%= user.id %>"><%= user.username %></option>
    <% end %>
  </select>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>
